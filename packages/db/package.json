{
  "name": "@this/db",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    "./client": "./src/client.ts",
    "./helpers": "./src/helpers.ts",
    "./types": "./src/types.ts"
  },
  "scripts": {
    "check": "biome check --write src",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "db:check": "drizzle-kit check",
    "db:drop": "drizzle-kit drop",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:pull": "drizzle-kit pull",
    "db:push": "drizzle-kit push",
    "db:reset": "supabase db reset",
    "db:seed": "tsx ./scripts/seed.ts",
    "db:seed:generate": "tsx ./scripts/seed.ts --dry-run > ./scripts/seed.sql",
    "db:seed:sync": "snaplet-seed sync",
    "db:studio": "drizzle-kit studio",
    "format": "biome format --write src",
    "lint": "biome lint --fix --unsafe src",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@this/common": "workspace:*",
    "@this/env": "workspace:*",
    "@this/observability": "workspace:^",
    "@vercel/postgres": "^0.10.0",
    "drizzle-orm": "^0.36.3"
  },
  "devDependencies": {
    "@snaplet/copycat": "^5.1.0",
    "@snaplet/seed": "^0.98.0",
    "@tooling/tsconfig": "workspace:*",
    "@tooling/utils": "workspace:^",
    "drizzle-kit": "^0.28.1",
    "postgres": "^3.4.5",
    "typescript": "catalog:"
  }
}
