{
  "extends": "@tooling/tsconfig/web",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~~/*": ["./*"],
      "content-collections": ["./.content-collections/generated"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "src",
    "scripts",
    "next-env.d.ts",
    "next.config.ts",
    ".next/types/**/*.ts"
  ]
}
