{
  "extends": ["expo/tsconfig.base", "@tooling/tsconfig/mobile.json"],
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "strict": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [
    ".expo/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "eslint.config.mjs",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
